const Weekday := enum {
  Monday,
  Tuesday,
  Wednesday,
  Thursday,
  Friday,
  Saturday,
  Sunday,
};

const Person := struct {
  name: str;
  age: int;
};

const main := fn () int {
  have p: Person;
  have w: Weekday;

  p.name = "Zura";
  p.age = 25;

  if (p.age > w.Monday) {
    dis("Hello, ", p.name, "!");
  } else {
    dis("Goodbye, ", p.name, "!");
  }

  return 0;
};