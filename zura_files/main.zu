const main := fn () int {
  have i: int = 0;
  loop (i <= 1)  {
    dis("loop 1\n");
    i = i + 1; # weird bug if we do i++ here we get a infinite loop
  }

  i = 0;
  loop (i < 10) : (i = i + 1) { # but in the optional we are fine
    dis("loop 2\n");
  }

  i = 0;
  loop (i < 4) {
    dis("loop 3\n");
    i = i + 1;
  } 

  return 0; 
};
