const Hobbies := enum {
    Cooking,
    Programming,
    Drawing,
    Reading,
}; 

const Person := struct {
    name: str;
    age: int;
    hobby: Hobbies;
    
    greet := fn (self: *Person) void {
        @dis("Hello, my name is ", self.name, " and I am ", self.age, " years old.");
    }; 
};

const main := fn () int {
  have John: Person = {
    name: "grandfather bro",
    age: 53,
    hobby: Hobbies.Drawing
  };

  John.greet(); # 'self' not included here

  return 0;
};
